{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
    <div class="container mt-4 col-md-4">
        <div class="jumbotron text-center">
            <h1>Connexion</h1>
        </div>
        <div class="alert alert-secondary">
            <form method="post">
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}

                <h1 class="h3 mb-3 font-weight-normal text-center">Entrez vos identifiants</h1>
                <label class="sr-only mb-3" for="inputEmail">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-3" placeholder="Email" required autofocus>
                <label class="sr-only" for="inputPassword">Password</label>
                <input class="form-control my-3" id="inputPassword" name="password" placeholder="Password" required type="password">

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-lg btn-primary center-block" type="submit">
                    Connexion
                </button>
            </form>
        </div>
    </div>
{% endblock %}
